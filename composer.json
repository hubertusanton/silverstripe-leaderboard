{
  "name": "hubertusanton/silverstripe-leaderboard",
  "description": "A gamification module for SilverStripe CMS that adds scoring, levels, and badges for CMS users",
  "type": "silverstripe-vendormodule",
  "keywords": [
    "silverstripe",
    "gamification",
    "leaderboard",
    "badges",
    "cms"
  ],
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Bart van Irsel",
      "email": "bart@webium.nl"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "silverstripe/framework": "^4.0 || ^5.0",
    "silverstripe/cms": "^4.0 || ^5.0"
  },
  "autoload": {
    "psr-4": {
      "Hubertusanton\\Leaderboard\\": "src/"
    }
  },
  "extra": {
    "installer-name": "leaderboard",
    "expose": [
        "client/css"
    ]
  },
  "minimum-stability": "stable"
}
